<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/constraint"
    tools:context=".RegisterationActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:id="@+id/textInputLayout2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="67dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="@color/colorwhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/AppCompatEditText_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:imeOptions="actionNext"
            />
    </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/AppCompatEditText_phone"
            android:layout_width="241dp"
            android:layout_height="43dp"
            android:hint="XXXXXXXXX"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:layout_marginRight="10dp"
            android:maxLength="9"
            android:textColorHint="@color/colorwhite"
            android:textColorHighlight="@color/colorwhite"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="@+id/textInputLayout"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/ccp"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/ccp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.166" />
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="63dp"
        android:layout_height="36dp"
        app:ccp_defaultNameCode="SD"
        app:ccp_clickable="false"
        app:ccp_showArrow="false"
        app:ccp_showFlag="false"
        app:ccp_showNameCode="false"
        app:ccp_autoDetectCountry="false"
        app:ccp_contentColor="@color/colorwhite"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.057" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:id="@+id/textInputLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="211dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/colorwhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/AppCompatEditText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:id="@+id/textInputLayout5"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="280dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="@color/colorwhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/AppCompatEditText_companyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/AppCompatButton_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registeration"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:backgroundTint="@color/colorgreen"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="344dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:theme="@style/progressbarlayout"
        app:layout_constraintTop_toBottomOf="@+id/AppCompatButton_register"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
